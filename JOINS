/*INNER JOIN INBETWEEN EMPOLYEE TABLE AND DEPARTMENT TABLE*/

SELECT EMP.EMPNO , EMP.ENAME , DEPT.DNAME FROM EMP INNER JOIN 
DEPT ON EMP.DEPTNO = DEPT.DEPTNO;

/*LEFT JOIN INBETWEEN EMPOLYEE TABLE AND DEPARTMENT TABLE*/

SELECT EMP.EMPNO , EMP.ENAME , DEPT.DNAME FROM EMP LEFT JOIN
DEPT ON EMP.DEPTNO = DEPT.DEPTNO;

/*RIGHT JOIN INBETWEEN EMPOLYEE TABLE AND DEPARTMENT TABLE*/

SELECT EMP.ENAME, EMP.JOB, DEPT.LOC FROM EMP RIGHT JOIN
 DEPT ON EMP.DEPTNO = DEPT.DEPTNO;

/*FULL OUTER JOIN INBETWEEN EMPOLYEE TABLE AND DEPARTMENT TABLE*/

SELECT EMP.MGR , EMP.HIREDATE, DEPT.DNAME FROM EMP FULL OUTER JOIN
DEPT ON EMP.DEPTNO = DEPT.DEPTNO;

/*NOT NULL QUERIE APPLIED INBETWEEN EMPOLYEE TABLE AND DEPARTMENT TABLE*/

SELECT EMPNO , ENAME FROM EMP 
WHERE DEPTNO IS NOT NULL;

/*NULL QUERIE APPLIED INBETWEEN EMPOLYEE TABLE AND DEPARTMENT TABLE*/

SELECT ENAME , HIREDATE FROM EMP
WHERE COMM IS NULL;

/*NO IN QUERIE APPLIED INBETWEEN EMPOLYEE TABLE AND DEPARTMENT TABLE*/

SELECT DEPTNO, DNAME FROM DEPT WHERE 
DEPTNO NOT IN (SELECT DEPTNO FROM EMP);
